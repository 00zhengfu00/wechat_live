.content-btm {
    width: 100%;
    height: auto;
    padding: 20rpx 35rpx;
}

.content-btm-intro {
    width: 100%;
    height: auto;
    color: #fff;
    font-size: 22rpx;
    line-height: 40rpx;
}

.talkInputBox {
    width: 100%;
    height: 110rpx;
    position: fixed;
    left: 0;
    bottom: 0;
    background: #f84758;
    padding: 20rpx 180rpx 20rpx 30rpx;
    z-index: 10;
}

.talkInputBox input {
    width: 100%;
    height: 70rpx;
    padding: 0 30rpx;
    background: #ffced3;
    border-radius: 10rpx;
    font-size: 24rpx;
    color: #f84758;
}

.talkInputBox button {
    width: 125rpx;
    height: 70rpx;
    line-height: 70rpx;
    background: #fff;
    text-align: center;
    position: absolute;
    bottom: 20rpx;
    right: 30rpx;
    color: #f84758;
    font-size: 24rpx;
}

.talkInputBox button::after {
    border: 0;
}

.talkInputBox .color {
    color: #f84758;
    font-size: 24rpx;
}
.popup{
    width: 85rpx;
    height: 85rpx;
    position: fixed;
    bottom: 45rpx;
    right: 40rpx;
    z-index: 11;
}
.popup image{
    width: 85rpx;
    height: 85rpx;
    position: absolute;
    top: 0;
    right: 0;
}
