.newRight-head-name {
    color: #000;
    font-size: 24rpx;
    margin: 45rpx 0 35rpx;
    line-height: 35rpx;
}

.newRight-head-price {
    color: #fd3e50;
    font-size: 24rpx;
    line-height: 35rpx;
}

.newRight-specs {
    width: 100%;
    height: auto;
    border-bottom: 2rpx solid #dcdddd;
    padding: 35rpx 65rpx 35px 35rpx;
}

.newRight-specs-title {
    width: auto;
    color: #595757;
    font-size: 20rpx;
    margin: 0 0 20rpx;
}

.newRight-specs-kind {
    width: 100%;
    height: auto;
    overflow: auto;
}

.newRight-specs-kind cover-view {
    width: 185rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: center;
    float: left;
    border: 2rpx solid #c9caca;
    margin: 0 25rpx 20rpx 0;
    font-size: 20rpx;
}

.newRight-num {
    width: 220rpx;
    height: 40rpx;
    border: 2rpx solid #dcdddd;
    position: relative;
}

.newRight-num-reduce {
    width: 60rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    color: #595757;
    font-size: 20rpx;
    position: absolute;
    top: 0;
    left: 0;
}

.newRight-num-add {
    width: 60rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    color: #ff0808;
    font-size: 20rpx;
    position: absolute;
    top: 0;
    right: 0;
}

.newRight-num-figure {
    width: 100rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    color: #595757;
    font-size: 20rpx;
    position: absolute;
    top: 0;
    right: 60rpx;
    border-left: 2rpx solid #dcdddd;
    border-right: 2rpx solid #dcdddd;
}

.newRight-btn {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    background: #fc5162;
    color: #fff;
    margin: 67rpx 0 0 35rpx;
    font-size: 24rpx;
}

.triangle {
    width: 0;
    height: 0;
    border-top: 13rpx solid transparent;
    border-right: 20rpx solid white;
    border-bottom: 13rpx solid transparent;
    position: absolute;
    right: -20rpx;
    top: 45%;
    z-index: 10;
}

.content-wrap {
    width: 100%;
    height: 26%;
    position: absolute;
    top: 870rpx;
    left: 0;
    padding: 20rpx 35rpx 0;
}

.content-wrap-dialogue {
    width: 100%;
    height: auto;
    line-height: 40rpx;
    margin: 10rpx 0;
}

.wrap-dialogue-name {
    width: auto;
    height: auto;
    color: #ff0808;
    font-size: 34rpx;
}

.wrap-dialogue-info {
    width: auto;
    height: auto;
    color: #fff;
    font-size: 34rpx;
}

.select {
    border: 2rpx solid #fc8b96 !important;
    color: #fc8b96;
}

.reduce-color {
    color: #ff0808;
}

