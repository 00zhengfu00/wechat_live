.container .list {
    width: 100%;
    height: 240rpx;
    background: #fff;
    margin: 10rpx 0 0;
    position: relative;
    padding: 20rpx 25rpx 20rpx 250rpx;
}

.list .list-avatar {
    width: 200rpx;
    height: 200rpx;
    position: absolute;
    top: 20rpx;
    left: 25rpx;
}

.list-status {
    width: auto;
    height: 20rpx;
    line-height: 20rpx;
    position: absolute;
    top: 35rpx;
    left: 40rpx;
    color: #fff;
    font-size: 20rpx;
    padding: 0 0 0 25rpx;
}

.list-status text {
    width: 18rpx;
    height: 18rpx;
    background: #f00;
    border-radius: 18rpx;
    position: absolute;
    top: 1rpx;
    left: 0;
}

.list-number {
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    left: 40rpx;
    bottom: 35rpx;
}

.list-wrap {
    width: 100%;
    height: 100%;
    position: relative;
}

.list-wrap-head {
    width: 100%;
    height: 35rpx;
    line-height: 35rpx;
    position: relative;
}

.list-wrap-title {
    width: 250rpx;
    height: 35rpx;
    line-height: 35rpx;
    color: #000;
    display: inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list-wrap-hot {
    width: 120rpx;
    height: 35rpx;
    line-height: 35rpx;
    color: #fff;
    background: #fe4b5b;
    border-radius: 100rpx;
    position: absolute;
    font-size: 20rpx;
    text-align: center;
    right: 0;
}

.list-wrap-name {
    width: 100%;
    height: 30rpx;
    line-height: 30rpx;
    color: #898989;
    font-size: 24rpx;
    margin: 20rpx 0 0;
    overflow: hidden;
}

.list-wrap-pic {
    width: 350rpx;
    height: 80rpx;
    position: absolute;
    bottom: 0;
    left: 0;
}

.list-wrap-imgs {
    height: 80rpx;
    float: left;
}

.list-wrap-imgs image {
    width: 80rpx;
    height: 80rpx;
    display: inline-block;
    margin: 0 10rpx 0 0;
}

.list-wrap-stream {
    width: 80rpx;
    height: 80rpx;
    float: left;
    background: #fbbdc3;
}

.list-stream-piece {
    display: block;
    margin: 20rpx 0 10rpx;
    text-align: center;
    color: #ff0018;
    font-size: 16rpx;
}

.list-stream-purchase {
    color: #ff0018;
    font-size: 16rpx;
    text-align: center;
    display: block;
}

